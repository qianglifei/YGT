<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_261"
        android:background="@mipmap/firstpage_headebg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_communityName"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_30"
        android:text="三洋东里社区 东门"
        android:textSize="@dimen/sp_18"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:layout_below="@+id/textView_communityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_personName"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:text="王保安"
        android:textSize="@dimen/sp_15"
        android:textColor="#fff"
        />
    <TextView
        android:layout_below="@+id/textView_communityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_OnlineTime"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/textView_personName"
        android:text="在线一小时"
        android:textSize="@dimen/sp_15"
        android:textColor="#fff"
        />
    <LinearLayout
        android:id="@+id/linearLayout_infoManagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_2"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_26"
            android:background="@mipmap/icon_xxgl"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15"
            android:text="信息管理"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/textView_OnlineTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_24">
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/icon_tabpic1"
            android:scaleType="centerCrop"
            />
        <RadioGroup
            android:layout_width="@dimen/dp_182"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_9"
            android:orientation="horizontal"
            android:background="@drawable/switch_card_bg">
            <RadioButton
                android:id="@+id/button_personGoInto"
                android:layout_width="@dimen/dp_91"
                android:layout_height="match_parent"
                android:text="人员进入"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:textColor="@drawable/button_text_color"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:background="@drawable/selector_switch_button"
                />
            <RadioButton
                android:id="@+id/button_personGoOut"
                android:layout_width="@dimen/dp_91"
                android:layout_height="match_parent"
                android:text="人员外出"
                android:button="@null"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_1"
                android:textColor="@drawable/button_text_color"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:background="@drawable/selector_switch_button"
                />
        </RadioGroup>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/icon_tabpic2"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
</RelativeLayout>