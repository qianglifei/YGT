<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f7f8"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_261"
            android:background="@mipmap/firstpage_headebg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_communityName"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_30"
            android:text="三洋东里社区 东门"
            android:textSize="@dimen/sp_18"
            android:textColor="#fff"
            android:textStyle="bold"
            />
        <TextView
            android:layout_below="@+id/textView_communityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_personName"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:text="王保安"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            />
        <TextView
            android:layout_below="@+id/textView_communityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_OnlineTime"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/textView_personName"
            android:text="在线一小时"
            android:textSize="@dimen/sp_15"
            android:textColor="#fff"
            />
        <LinearLayout
            android:id="@+id/linearLayout_infoManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_26"
                android:background="@mipmap/icon_xxgl"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/sp_15"
                android:text="信息管理"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_switchButton"
            android:layout_below="@+id/textView_OnlineTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_24">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/icon_tabpic1"
                android:scaleType="centerCrop"
                />
            <RadioGroup
                android:layout_width="@dimen/dp_184"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_9"
                android:orientation="horizontal"
                android:background="@drawable/switch_card_bg">
                <RadioButton
                    android:id="@+id/button_personGoInto"
                    android:layout_width="@dimen/dp_91"
                    android:layout_height="match_parent"
                    android:text="人员进入"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:textColor="@drawable/button_text_color"
                    android:button="@null"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:checked="true"
                    android:background="@drawable/selector_switch_button"
                    />
                <RadioButton
                    android:id="@+id/button_personGoOut"
                    android:layout_width="@dimen/dp_91"
                    android:layout_height="match_parent"
                    android:text="人员外出"
                    android:button="@null"
                    android:layout_marginTop="@dimen/dp_1"
                    android:layout_marginBottom="@dimen/dp_1"
                    android:textColor="@drawable/button_text_color"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:background="@drawable/selector_switch_button"
                    />
            </RadioGroup>
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/icon_tabpic2"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout_switchButton"
            android:layout_width="@dimen/dp_336"
            app:cardCornerRadius="@dimen/dp_8"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView_trafficCondition"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_60"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:background="@mipmap/icon_zctx"
                    />
                <TextView
                    android:id="@+id/textView_trafficCondition"
                    android:layout_alignLeft="@+id/imageView_trafficCondition"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textColor="#00CC99"
                    android:textSize="@dimen/sp_14"
                    android:layout_below="@+id/imageView_trafficCondition"
                    android:text="可以通行"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王宝长"
                    android:textColor="#000"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/imageView_trafficCondition"
                    android:layout_alignTop="@+id/imageView_trafficCondition"
                    android:layout_marginLeft="@dimen/dp_33"
                    />
                <TextView
                    android:id="@+id/textView_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业主"
                    android:textColor="#fff"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/textView_name"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:layout_alignBottom="@+id/textView_name"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:background="@drawable/text_bg"
                    />
                <TextView
                    android:id="@+id/textView_phoneTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignLeft="@+id/textView_name"
                    android:layout_below="@+id/textView_name"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/textView_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18612937836"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignLeft="@+id/textView_name"
                    android:layout_below="@+id/textView_phoneTitle"
                    android:layout_marginTop="@dimen/dp_8"
                    />
                <TextView
                    android:id="@+id/textView_addressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignLeft="@+id/textView_name"
                    android:layout_below="@+id/textView_phone"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <TextView
                    android:id="@+id/textView_address"
                    android:layout_width="@dimen/dp_127"
                    android:layout_height="wrap_content"
                    android:text="地址北京市昌平区阿里解上看到就烦"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignLeft="@+id/textView_name"
                    android:layout_below="@+id/textView_addressTitle"
                    android:layout_marginTop="@dimen/dp_8"
                    />
                <TextView
                    android:id="@+id/textView_timeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="#00CC99"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignLeft="@+id/textView_trafficCondition"
                    android:layout_below="@+id/textView_addressTitle"
                    />
                <TextView
                    android:id="@+id/textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3小时"
                    android:textColor="#00CC99"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:layout_alignLeft="@+id/textView_trafficCondition"
                    android:layout_below="@+id/textView_timeTitle"
                    android:layout_marginTop="@dimen/dp_9"
                    />
                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:id="@+id/linearLayout_drive"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageView_trafficCondition"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/linearlayout_checkbox_bg"
                    >
                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_20"
                        android:background="@drawable/selector_checkbox_bg"
                        android:button="@null"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="驾车"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:id="@+id/linearLayout_temperature"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/linearLayout_drive"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/linearlayout_checkbox_bg"
                    >
                    <CheckBox
                        android:id="@+id/checkbox_temperature"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_20"
                        android:background="@drawable/selector_checkbox_bg"
                        android:button="@null"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体温"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#333333"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/textView_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#E5E5E5"
                    />
                <LinearLayout
                    android:layout_below="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linearLayout_scan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_48">
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:background="@mipmap/icon_sys"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:text="扫一扫"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#009999"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:background="#E5E5E5"/>
                    <LinearLayout
                        android:id="@+id/linearLayout_read"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="@dimen/dp_48">
                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:background="@mipmap/icon_dyd"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:text="读一读"
                            android:textSize="@dimen/sp_16"
                            android:textColor="#009999"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:id="@+id/linearLayout_statistics"
            android:elevation="@dimen/dp_4"
            android:layout_below="@id/cardView"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_height="@dimen/dp_100"
            android:background="@drawable/linearlayout_bg"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:text="进入人数"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="370"
                    android:textColor="#00CC99"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_22"
                    android:background="@mipmap/icon_ren"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:text="人"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="350"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_22"
                    android:background="@mipmap/icon_che"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:text="车"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="50"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:text="外出人数"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="270"
                    android:textColor="#F87272"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_22"
                    android:background="@mipmap/icon_ren"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:text="人"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="350"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_22"
                    android:background="@mipmap/icon_che"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:text="车"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="50"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:elevation="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/linearlayout_bg"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_below="@+id/linearLayout_statistics"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/icon_sctx"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_7"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常通行"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="260"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_18"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/icon_xztx2_1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_7"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限制通行"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="260"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_18"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="@dimen/dp_33"
                    android:layout_height="@dimen/dp_33"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/icon_xztx2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dp_7"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="禁止通行"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="260"
                        android:textStyle="bold"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_18"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
